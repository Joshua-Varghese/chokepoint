rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to products
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow authenticated admins to add/edit products
    }
    
    // Users: Users can read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Devices: Allow authenticated users to search (spectate) and claim
    match /devices/{deviceId} {
      allow read: if true; // TEMPORARY DEBUG: Allow public read to fix "Invalid Code"
      allow write: if request.auth != null;
      
      match /readings/{readingId} {
         allow read: if true; // TEMPORARY DEBUG
      }
    }

    // Orders: Allow public creation and updates (Guest Checkout)
    match /orders/{orderId} {
      allow create: if true;
      allow read, update: if true; 
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
